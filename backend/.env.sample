# Blaze Backend Environment Variables
# Copy this file to .env and fill in your actual values

# =============================================================================
# Flask Application Configuration
# =============================================================================

# Secret key for Flask sessions and security
# Generate a secure random string for production
SECRET_KEY=your-secret-key-here

# Server host and port configuration
HOST=0.0.0.0
PORT=8000

# =============================================================================
# Database Configuration
# =============================================================================

# SQLite database file path
# Default: blaze.db (in the backend directory)
SQLITE_DB_PATH=blaze.db

# =============================================================================
# OpenAI Configuration
# =============================================================================

# OpenAI API Key (REQUIRED)
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here

# OpenAI API Base URL (OPTIONAL)
# Default: https://api.openai.com/v1
# Use this for custom endpoints or proxy servers
OPENAI_API_BASE=https://api.openai.com/v1
